<div class="tought-form-container">
    <a href="/toughts/dashboard">Voltar</a>
    <h1>Editar um pesnamento</h1>
    <form action="/toughts/edit" method="POST">
    
        <div class="form-control">
            <label for="title">Pensamentos</label>
            <input type="hidden" name="id" value="{{toughts.id}}">
            <input type="text" name="title" placeholder="Digite um pensamento" value="{{toughts.title}}">
        </div>
        <input type="submit" value="Atualizar Pensamento">
    
    </form>
</div>
