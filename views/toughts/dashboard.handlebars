<div class="dashboard">
    <div class="tilte-container">
        <h2>Dashboard</h2>
        <a href="/toughts/add" class="btn">Criar pensamentos</a>
    </div>
    <h3>Seus pensamentos</h3>

    <ul>
        {{#each toughts}}
        <li>

            <span class="label">{{this.title}}</span>
            <span class="actions">
                <a href="/toughts/edit/{{this.id}}" class="btn">Editar</a>
                <form action="/toughts/delete" method="POST">                
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="submit" value="Excluir" class="btn">                
                </form>
            </span>

        </li>
        {{/each}}

    </ul>

    {{#if emptyToughts}}
     <p>Lista de Vazia comece criando um pensamento <a href="/toughts/add">por aqui</a> </p>
    {{/if}}

</div>
